/* Reset and Base Styles */
* {
  color: black;
  text-align: left;
  font-size: 14px;
  font-family: Georgia, "Times New Roman", Times, serif;
  text-indent: 0%;
  box-sizing: border-box;
}

body {
  margin: 0;
  padding: 0;
  font-family: Georgia, "Times New Roman", Times, serif;
  background-color: white;
  overflow-x: hidden;
  display: flex;
  justify-content: center;
  min-width: 100vw;
}

/* Mobile Landing Page */
.mobile-landing {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  padding: 20px;
  text-align: center;
  background-color: white;
}

.mobile-logo {
  width: 200px;
  height: 200px;
  margin: 0 auto;
}

.mobile-logo svg {
  width: 100%;
  height: 100%;
}

.mobile-nav-btn {
  background-color: white;
  color: black;
  border: 2px solid #333;
  padding: 15px 20px;
  font-size: 16px;
  cursor: pointer;
  border-radius: 5px;
  transition: all 0.3s ease;
  font-family: Georgia, "Times New Roman", Times, serif;
}

.mobile-nav-btn:hover {
  background-color: #f5f5f5;
  border-color: #555;
}

/* Main Content Layout */
.main-content {
  display: none;
  height: 100vh;
  flex-direction: row;
  background-color: white;
  max-width: 1300px; /* 200px logo + 300px TOC + 800px content */
  margin: 0 auto;
}

/* Left Logo Column */
.logo-column {
  width: 200px;
  max-width: 200px;
  min-width: 200px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: 30px 20px;
  background-color: white;
  position: relative;
  height: 100vh;
  flex-shrink: 0;
}

.logo-column .header-logo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo-column .header-logo svg {
  width: 150px;
  height: 150px;
}

.header-subtitle {
  font-family: sans-serif !important;
  font-size: 16px !important;
  font-weight: 100 !important;
  color: #ff00ea !important;
  margin-top: 15px;
  text-align: center !important;
  line-height: 1.3;
}

/* Right Panel */
.right-panel {
  margin-left: 50px;
  width: 1100px; /* 300px TOC + 800px content */
  max-width: 1100px;
  display: flex;
  flex-direction: column;
  height: 100vh;
  flex-shrink: 0;
}

/* Navigation Header */
.nav-header {
  height: 120px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  border-bottom: 1px solid #eee;
  padding: 20px;
  flex-shrink: 0;
}

.header-nav {
  display: flex;
  gap: 40px;
  justify-content: center;
}

.nav-btn {
  background: none;
  color: #666;
  border: none;
  padding: 10px 15px;
  font-size: 14px;
  cursor: pointer;
  transition: all 0.3s ease;
  font-family: Georgia, "Times New Roman", Times, serif;
  text-decoration: none;
  text-align: center;
}

.nav-btn:hover {
  color: #333;
}

.nav-btn.active {
  color: #000;
  font-weight: bold;
}

/* Content Wrapper */
.content-wrapper {
  display: flex;
  flex: 1;
  height: calc(100vh - 120px);
  overflow: hidden;
}

.left-column {
  width: 300px;
  max-width: 300px;
  min-width: 300px;
  background-color: white;
  padding: 20px;
  overflow-y: auto;
  border-right: 1px solid #eee;
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* Internet Explorer 10+ */
  flex-shrink: 0;
}

.left-column::-webkit-scrollbar {
  display: none; /* Safari and Chrome */
}

.left-column.hidden {
  display: none;
}

.content {
  width: 800px;
  max-width: 800px;
  padding: 20px;
  overflow-y: auto;
  background-color: white;
  scrollbar-width: none; /* Firefox */
  -ms-overflow-style: none; /* Internet Explorer 10+ */
  flex-shrink: 0;
}

.content::-webkit-scrollbar {
  display: none; /* Safari and Chrome */
}

.content.full-width {
  width: 800px;
  max-width: 800px;
  border-right: none;
}

/* Chapter Navigation */
.chapter-nav {
  display: none;
  justify-content: center;
  gap: 10px;
  padding: 15px;
  background-color: white;
  border-top: 1px solid #eee;
  flex-shrink: 0;
}

.chapter-nav.visible {
  display: flex;
}

.chapter-nav button {
  background-color: white;
  color: black;
  border: 2px solid #333;
  padding: 10px 15px;
  font-size: 14px;
  cursor: pointer;
  border-radius: 3px;
  transition: all 0.3s ease;
  font-family: Georgia, "Times New Roman", Times, serif;
}

.chapter-nav button:hover {
  background-color: #f5f5f5;
  border-color: #555;
}

/* Desktop Layout */
@media (min-width: 769px) {
  .mobile-landing {
    display: none;
  }
  
  .main-content {
    display: flex;
  }
}

/* Mobile Layout */
@media (max-width: 768px) {
  body {
    display: block;
  }
  
  .main-content {
    max-width: 100vw;
    margin: 0;
  }
  
  .main-content.show-content {
    display: flex;
    flex-direction: column;
  }
  
  .mobile-landing.hidden {
    display: none;
  }
  
  /* Hide desktop logo column on mobile */
  .logo-column {
    display: none;
  }
  
  /* Make right panel full width on mobile */
  .right-panel {
    margin-left: 0;
    width: 100%;
  }
  
  .nav-header {
    height: auto;
    padding: 15px;
  }
  
  .header-nav {
    flex-direction: column;
    gap: 15px;
  }
  
  .nav-btn {
    font-size: 12px;
    padding: 8px 12px;
  }
  
  .content-wrapper {
    flex-direction: column;
    height: calc(100vh - 160px);
  }
  
  .left-column {
    width: 100%;
    max-width: none;
    border-right: none;
    border-bottom: 1px solid #eee;
    max-height: 40vh;
  }
  
  .content {
    max-height: 60vh;
  }
}

/* Navigation Links Styling */
.nav-link {
  text-decoration: none;
  color: magenta;
  text-indent: 0;
  z-index: 1;
  cursor: pointer;
  display: inline-block;
  margin-bottom: 5px;
}

.nav-link:hover {
  color: darkmagenta;
  text-decoration: underline;
}

/* Content Headings */
.content h1 {
  height: auto;
  text-align: left;
  font-size: 200%;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
  font-weight: bold;
  position: relative;
  background: none;
  color: black;
  max-width: none;
}

@media screen and (max-width: 800px) {
  .content h1 {
    font-size: 150%;
  }
}

h2 {
  font-size: 140%;
  font-family: Georgia, "Times New Roman", Times, serif;
  position: relative;
  background: none;
  text-align: left;
  color: black;
  margin-top: 30px;
  margin-bottom: 15px;
}

h3 {
  font-size: 120%;
  color: #333;
  margin-top: 25px;
  margin-bottom: 15px;
}

/* Text Elements */
a, h3, p, pre, li {
  padding: 0;
  background: none;
  line-height: 24px;
}

p {
  margin-bottom: 15px;
}

ul {
  margin-left: 20px;
}

ul li {
  margin-bottom: 8px;
}

/* Legacy navbar styles (if needed) */
.navbar {
  height: 50px;
  display: block;
}

.navbar button {
  background-color: white;
  color: black;
  border: 2px solid #333;
  border-radius: 10px;
  padding: 5px 10px;
  font-size: 16px;
  transition: all 0.3s ease;
}

.button-style {
  background-color: white;
  color: black;
  border: 2px solid #333;
  border-radius: 10px;
  padding: 5px 10px;
  font-size: 16px;
  transition: all 0.3s ease;
  text-decoration: none;
}

.navbar button:hover,
.button-style:hover {
  background-color: #f5f5f5;
  border-color: #555;
}

/* Styles for mobile */
@media screen and (max-width: 600px) {
  .left-column {
    display: none;
  }

  .content {
    width: 100%;
  }

  .navbar {
    display: block;
    /* Additional styling for buttons */
  }
}

@media only screen and (min-device-pixel-ratio: 1),
  only screen and (min-resolution: 192dpi) {
  /* High-density screen (e.g., Retina) styles */
}

.social-icon {
  margin: 5px 10px; /* Adjust margin to match your design */
  padding: 0; /* Keep original padding */
  font-size: 30px; /* Set the font size for the social icons */
}

/* Styles for larger screens */
@media (min-width: 600px) {
  .social-icon {
    display: inline-block;
    margin-right: 10px;
  }
}

/* Styles for smaller screens */
@media (max-width: 599px) {
  .social-icon {
    display: block;
    margin-bottom: 10px;
  }
}

